<div>
  <img src="{{movie.image}}" alt="{{movie.title}} image">
  <h2>{{movie.title}}</h2>
  <h3>Directed by: {{movie.director}}</h3>
  <p>{{movie.description}}</p>
  <h4>Starring:</h4>
  <ul>
    {{#with movie.stars}}
      {{#each this}}
      <li>{{this}}</li>
      {{/each}}
    {{/with}}
  </ul>
  <h4>Showtimes:</h4>
    {{#with movie.showtimes}}
      {{#each this}}
        {{this}}
      {{/each}}
    {{/with}}
</div>